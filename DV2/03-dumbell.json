{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/yxuan-chew0510/3179/refs/heads/main/DV2/dataset/edu_lfs_merged.csv"
  },
  "params": [
    {
      "name": "year_select",
      "value": 2021,
        "bind": {
          "input": "range",
          "min": 2011,
          "max": 2021,
          "step": 1,
          "name": "Select Year: "
        }
    }
  ],
  "transform": [
    {"filter": "lower(datum.education_level) == 'tertiary'"},
    {"calculate": "toNumber(datum.year)", "as": "year_num"},
    {"filter": "datum.year_num == year_select"},
    {"calculate": "toNumber(datum.percentage) * 100", "as": "edu_pct"},
    {"calculate": "toNumber(datum.u_rate)", "as": "u_rate_num"},
    {
      "fold": ["edu_pct", "u_rate_num"],
      "as": ["metric", "value"]
    },
    {
      "calculate": "datum.metric == 'edu_pct' ? 'Tertiary Education (%)' : 'Unemployment Rate (%)'",
      "as": "MetricLabel"
    }
  ],
  "layer": [
    {
      "mark": {"type": "rule", "strokeWidth": 2, "color": "#cccccc"},
      "encoding": {
        "y": {
          "field": "state",
          "type": "nominal",
          "title": "State",
          "sort": {"field": "edu_pct", "order": "descending"}
        },
        "x": {
          "aggregate": "min",
          "field": "value",
          "type": "quantitative"
        },
        "x2": {
          "aggregate": "max",
          "field": "value"
        }
      }
    },
    {
      "mark": {"type": "point", "filled": true, "size": 120},
      "encoding": {
        "y": {"field": "state", "type": "nominal", "title": null},
        "x": {"field": "value", "type": "quantitative", "title": "Value (%)"},
        "color": {
        "field": "MetricLabel",
        "type": "nominal",
        "scale": {
            "domain": ["Tertiary Education (%)", "Unemployment Rate (%)"],
            "range": ["#1f77b4", "#d62728"]
        },
        "legend": {
            "orient": "bottom-right",
            "direction": "horizontal",
            "title": null
        }
        },

        "tooltip": [
          {"field": "state", "title": "State"},
          {"field": "MetricLabel", "title": "Metric"},
          {"field": "value", "title": "Value (%)", "format": ".1f"}
        ]
      }
    }
  ]
}
