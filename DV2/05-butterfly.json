{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "data": {
    "url": "https://raw.githubusercontent.com/yxuan-chew0510/3179/refs/heads/main/DV2/dataset/lfs_state_sex.csv",
    "format": {"type": "csv"}
  },

  "transform": [
    {"calculate": "lower(trim(datum.sex))", "as": "sex_l"},
    {"filter": "datum.sex_l == 'male' || datum.sex_l == 'female'"},
    {"calculate": "toNumber(substring(toString(datum.date),0,4))", "as": "year"},
    {"filter": "datum.year >= 2011 && datum.year <= 2021"},
    {"fold": ["p_rate"], "as": ["indicator", "value"]},
    {"calculate": "toNumber(datum.value) <= 1 ? toNumber(datum.value)*100 : toNumber(datum.value)", "as": "val_pct"},
    {"calculate": "datum.sex_l == 'female' ? -datum.val_pct : datum.val_pct", "as": "display_value"}
  ],

  "width": 700,
  "height": 400,
  "layer": [
    {
      "mark": {"type": "bar", "tooltip": true},
      "encoding": {
        "y": {"field": "state", "type": "nominal", "title": "State", "sort": "-x"},
        "x": {
          "field": "display_value",
          "type": "quantitative",
          "title": "Cumulative Participation Rate (%)"
        },
        "color": {
          "field": "sex_l",
          "type": "nominal",
          "scale": {"domain": ["male", "female"], "range": ["#1f77b4", "#E69F00"]},
          "legend": {"title": "Gender"}
        },
        "tooltip": [
          {"field": "state", "title": "State"},
          {"field": "year", "title": "Year"},
          {"field": "sex_l", "title": "Gender"},
          {"field": "val_pct", "title": "Participation Rate (%)", "format": ".1f"}
        ]
      }
    },
    {"mark": {"type": "rule", "color": "black"}, "encoding": {"x": {"value": 0}}}
  ]
}
